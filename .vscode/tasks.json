            "command":"${workspaceFolder}/openapi/redocly.sh",
            "group":{
                "kind":"build",
                "isDefault":true
            },
            "problemMatcher":[]
        },
        {
            "label":"Generate OpenAPI Backend",
            "type":"shell",
            "command":"${workspaceFolder}/backend/.openapi/generate.sh",
            "group":{
                "kind":"build",
                "isDefault":true
            },
            "problemMatcher":[]
        },
        {
            "label":"Generate OpenAPI Frontend",
            "type":"shell",
            "command":"${workspaceFolder}/frontend/.openapi/generate.sh",
            "group":{
                "kind":"build",
                "isDefault":true
            },
            "problemMatcher":[]
        },
        {
            "label": "Run Vite in Windows",
            "type": "process",
            "command": "docker",
            "args": ["exec", "-it", "react", "npm", "run", "dev"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        }
